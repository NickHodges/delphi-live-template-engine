<?xml version="1.0" encoding="utf-8" ?>
<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="time" invoke="manual">
		<description>
			Inserts the current time at the point where the template is invoked
		</description>
		<author>
			CodeGear
		</author>
		<point name="time">
			<text>
				time
			</text>
			<hint>
				current time
			</hint>
		</point>
		<script language="DateTimeScript" onenter="true" onleave="true">
		   time=InsertTime
		   timeformatstr=hh:mm:ss
		</script>
		<code language="Delphi" delimiter="|"><![CDATA[
|time|
		]]>
		</code>
	</template>
</codetemplate>